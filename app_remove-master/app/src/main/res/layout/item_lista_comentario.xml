<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitePure"
    android:padding="10dp">


    <ImageView
        android:id="@+id/foto_comentario"
        android:background="@drawable/layout_redondo"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <include layout="@layout/layout_nome_titulo_nota">
        </include>

        <!-- nome titulo e nora -->

        <nicolas.ex1.CustomFonts.OpenSansRegFont
            android:id="@+id/comentario_comentario"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>